{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "outDir": "./dist"
  },

  "exclude": [
    "node_modules",
    "dist",
    "aot"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}

