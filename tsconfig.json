{
  "compilerOptions": {
      "module": "es2015",
      "target": "es5",
      "moduleResolution": "node",
      "sourceMap": true,
      "inlineSources": true,
      "declaration": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "lib": ["dom", "es2015"],
      "outDir": "./dist"
  },

  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}

